rg-prod="iac-prod-rg"
rg-dev="iac-dev-rg"
location="eastus"

# Check current account
az account show

# Create resource groups
az group create -n $rg-dev -l $location --tags owner=team-platform env=dev description="Workshop #1 resources for dev environment"
az group create -n $rg-prod -l $location --tags owner=team-platform env=prod description="Workshop #1 resources for production environment"

# Cleanup created groups
az group list --query "[? contains(name,'iac')]".name -o tsv | xargs -otl az group delete -y --no-wait -n
