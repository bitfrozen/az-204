{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "metadata": {
        "description": "template environment"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "resource location"
      }
    }
  },
  "functions": [],
  "variables": {
    "aks-nsg-name": "[concat('iac-', parameters('environment'), '-aks-nsg')]",
    "agw-nsg-name": "[concat('iac-', parameters('environment'), '-agw-nsg')]",
    "agwSubnetAddressPrefix": "10.112.16.128/25",
    "aksSubnetAddressPrefix": "10.112.0.0/20"
  },
  "resources": [
    {
      "name": "[variables('agw-nsg-name')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "INT-T443-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "[variables('agwSubnetAddressPrefix')]",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "INT-T80-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "[variables('agwSubnetAddressPrefix')]",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          },
          {
            "name": "AKS-T443-OUT-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "[variables('agwSubnetAddressPrefix')]",
              "destinationAddressPrefix": "[variables('aksSubnetAddressPrefix')]",
              "access": "Allow",
              "priority": 102,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('aks-nsg-name')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AGW-T443-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "[variables('agwSubnetAddressPrefix')]",
              "destinationAddressPrefix": "[variables('aksSubnetAddressPrefix')]",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}