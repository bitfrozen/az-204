{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "aks-nsg-name": {
      "type": "string",
      "defaultValue": "iac-dev-aks-nsg",
      "metadata": {
        "description": "AKS network security group name"
      }
    },
    "agw-nsg-name": {
      "type": "string",
      "defaultValue": "iac-dev-agw-nsg",
      "metadata": {
        "description": "AGW network security group name"
      }
    }
  },
  "functions": [],
  "variables": {},
  "resources": [
    {
      "name": "iac-dev-vnet",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-11-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "iac-dev-vnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.112.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "aks-net",
            "properties": {
              "addressPrefix": "10.112.0.0/20",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('aks-nsg-name'))]"
              }
            }
          },
          {
            "name": "agw-net",
            "properties": {
              "addressPrefix": "10.112.16.128/25",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('agw-nsg-name'))]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}