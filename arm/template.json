{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "aks-nsg-name": {
      "type": "string",
      "defaultValue": "iac-dev-aks-nsg",
      "metadata": {
        "description": "AKS network security group name"
      }
    },
    "agw-nsg-name": {
      "type": "string",
      "defaultValue": "iac-dev-agw-nsg",
      "metadata": {
        "description": "AGW network security group name"
      }
    }
  },
  "functions": [],
  "variables": {},
  "resources": [
    {
      "name": "[parameters('agw-nsg-name')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-11-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "INT-T443-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "10.112.16.128/25",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
                    {
            "name": "INT-T80-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "10.112.16.128/25",
              "access": "Allow",
              "priority": 101,
              "direction": "Inbound"
            }
          },
                    {
            "name": "AKS-T443-OUT-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "10.112.16.128/25",
              "destinationAddressPrefix": "10.112.0.0/20",
              "access": "Allow",
              "priority": 102,
              "direction": "Outbound"
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('aks-nsg-name')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2020-11-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "AGW-T443-IN-ALLOW",
            "properties": {
              "description": "",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "10.112.16.128/25",
              "destinationAddressPrefix": "10.112.0.0/20",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "name": "iac-dev-vnet",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-11-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('aks-nsg-name'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('agw-nsg-name'))]"
      ],
      "tags": {
        "displayName": "iac-dev-vnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.112.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "aks-net",
            "properties": {
              "addressPrefix": "10.112.0.0/20",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('aks-nsg-name'))]"
              }
            }
          },
          {
            "name": "agw-net",
            "properties": {
              "addressPrefix": "10.112.16.128/25",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('agw-nsg-name'))]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}